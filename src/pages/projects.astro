---
import Layout from '../layouts/Layout.astro';
import ProjectList from '../components/ProjectList.tsx';

const title = "Projects";
---

<Layout title={title}>
  <main class="max-w-4xl mx-auto px-4 py-16 sm:py-24">

    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white transition-colors duration-300">
        Projects
      </h1>
      <p class="mt-4 text-lg text-gray-700 dark:text-gray-300 transition-colors duration-300">
        Here are some of the projects I have worked on.
      </p>
    </div>

    <ProjectList client:visible />

  </main>
</Layout>